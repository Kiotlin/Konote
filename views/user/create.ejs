    <script>
        feather.replace()
    </script>

    <!-- editor -->
    <script src="https://unpkg.com/wangeditor@3.1.1/release/wangEditor.min.js"></script>

    <!-- socket.io & editor generator-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.3.0/socket.io.js"></script>
    <script>
        // create editor
        var E = window.wangEditor;
        var editor = new E('#toolbar', '#textEditor');
        var newEdited = 0;
        editor.customConfig.onchange = function (html) {
            newEdited += 1;
        }
        editor.customConfig.onchangeTimeout = 4000;
        editor.create();

        // create socket 
        var socket = io();
        var element = function (id) { return document.getElementById(id); }
        var saveButton = element('saveButton');

        saveButton.addEventListener('click', function () {
            var username = 'kiokh';
            var title = element('titleInput').value;
            var content = editor.txt.html();
            var author = 'kiokh';

            socket.emit('save', {
                username: username,
                title: title,
                author: author,
                content: content
            });
        });

        socket.on('saveSuccess', function () {
            var unsaved = element('unsaved');
            unsaved.innerHTML = '0'
            newEdited = 0;
            $('.toast').toast('show');
        });

        // monitoring text change
        var textMonitor = setInterval(() => {
            console.log(newEdited);

            if (newEdited > 0) {
                var newContent = editor.txt.html();
                var title = element('titleInput').value;

                socket.emit('newChange', {
                    title: title,
                    content: newContent
                });
            }
        }, 12000);

        var buttonSettor = setInterval(() => {
            var unsaved = element('unsaved');
            unsaved.innerHTML = newEdited;
        }, 1000);

        // socket.on('changed', function (n) {

        // });

    </script>
